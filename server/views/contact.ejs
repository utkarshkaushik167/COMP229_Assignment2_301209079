

<%- include partials/header.ejs %> <%- include partials/main_nav.ejs %>
<div
  style="
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 100%;
    height: 100vh;
    background: linear-gradient(blue, purple);
    color: white;
    padding-top: 50px;
    padding-bottom: 50px;
    overflow-y: scroll;
  "
>
  <!-- Masthead Avatar Image-->
  <div style="width: 75px; margin-top: 100px">
    <img
      class="masthead-avatar mb-5"
      src="images/utk.jpg"
      alt="..."
      style="width: 100%; border-radius: 50%"
    />
  </div>
  <!-- Masthead Heading-->
  <h1 class="masthead-heading text-uppercase mb-0">Contact Me</h1>
  <!-- Icon Divider-->
  <div class="divider-custom divider-light">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-icon"><h1>☎️</h1></div>
    <div class="divider-custom-line"></div>
  </div>
  <!-- Masthead Subheading-->
  <p class="masthead-subheading font-weight-light mb-0">
    <a
      class="mylink text-decoration-none"
      href="https://www.linkedin.com/in/utkarsh-kaushik-9b30574b/"
      style="font-weight: 600"
      >LinkedIn/Utkarsh-Kaushik
    </a>
  </p>

  <!-- Wrapper container -->
  <div class="container py-4 d-flex justify-content-center">
    <!-- Bootstrap 5 starter form -->
    <form id="contactForm" class="col-6">
      <!-- Name input -->
      <div class="mb-3">
        <label class="form-label" for="contact_name">Name</label>
        <input
          class="form-control"
          id="contact_name"
          type="text"
          placeholder="Name"
        />
      </div>

      <!-- Email address input -->
      <div class="mb-3">
        <label class="form-label" for="contact_phone">Phone</label>
        <input
          class="form-control"
          id="contact_phone"
          type="phone"
          placeholder="Phone Number"
        />
      </div>

      <!-- Email address input -->
      <div class="mb-3">
        <label class="form-label" for="contact_email_address"
          >Email Address</label
        >
        <input
          class="form-control"
          id="contact_email_address"
          type="email"
          placeholder="Email Address"
        />
      </div>

      <!-- Message input -->
      <div class="mb-3">
        <label class="form-label" for="contact_message">Message</label>
        <textarea
          class="form-control"
          id="contact_message"
          type="text"
          placeholder="Message"
          style="height: 10rem"
        ></textarea>
      </div>

      <!-- Form submit button -->
      <div class="d-grid">
        <button
          class="btn btn-primary btn-lg"
          onclick="alert('Your data has been submitted. We will contact you shortly.')"
          id="contact_button"
          type="button"
        >
          Submit
        </button>
      </div>
    </form>
  </div>
</div>

<%- include partials/bottom_nav.ejs %> <%- include partials/footer.ejs %>
